# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"

  config.vm.define "gateway" do |gateway|
    gateway.vm.hostname = "gateway"
    gateway.vm.provider "virtualbox" do |vb|
    vb.name = "gateway"
    vb.cpus = 2
    vb.memory = 2048
    end
    gateway.vm.network "public_network"
    gateway.vm.network "private_network", ip: "192.168.33.254"

    gateway.vm.provision "shell", inline: <<-SCRIPT
      sudo ip route del default via 10.0.2.2 dev enp0s3
    SCRIPT
  end

  config.vm.define "webserver1" do |webserver1|
    webserver1.vm.hostname = "webserver1"
    webserver1.vm.provider "virtualbox" do |vb|
    vb.name = "webserver1"
    vb.cpus = 2
    vb.memory = 2048
    end
    webserver1.vm.network "private_network", ip: "192.168.33.10"

    webserver1.vm.provision "shell", inline: <<-SCRIPT
      sudo ip route del default via 10.0.2.2 dev enp0s3
    SCRIPT
  end

  config.vm.define "webserver2" do |webserver2|
    webserver2.vm.hostname = "webserver2"
    webserver2.vm.provider "virtualbox" do |vb|
    vb.name = "webserver2"
    vb.cpus = 2
    vb.memory = 2048
    end
    webserver2.vm.network "private_network", ip: "192.168.33.20"

    webserver2.vm.provision "shell", inline: <<-SCRIPT
      sudo ip route del default via 10.0.2.2 dev enp0s3
    SCRIPT
  end
end
